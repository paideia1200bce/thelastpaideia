# The Last Paideia - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# PASSWORD PROTECTION
# ===========================================
# Generate a password hash using: npm run hash-password "your-password"
# Or use: node -e "import('bcrypt').then(b => b.default.hash('your-password', 12).then(console.log))"
PASSWORD_HASH=

# Random session secret (32+ characters recommended)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# Set to "true" to make the video publicly accessible (no password required)
IS_PUBLIC=false

# ===========================================
# CLOUDFLARE R2 CONFIGURATION
# ===========================================
# Find these in Cloudflare Dashboard > R2 > Manage R2 API Tokens

# Your Cloudflare account ID (found in dashboard URL or sidebar)
R2_ACCOUNT_ID=

# R2 API token credentials
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# Your R2 bucket name
R2_BUCKET_NAME=

# The filename of your video in the R2 bucket
VIDEO_KEY=the-last-paideia.mp4

# ===========================================
# OPTIONAL
# ===========================================
# Server port (Railway sets this automatically)
PORT=3000

# Node environment
NODE_ENV=development
